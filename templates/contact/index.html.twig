{% extends 'base.html.twig' %}

{% block title %}Les amis du monde - Contact{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}

    <div id="contact-banner">  
        <div>
            <h1>CONTACTEZ NOUS</h1>
            <p>lorem ipsum</p>
        </div>
    </div>
    
    <div class="bodyDivContact" >
    
			<div class="contact">
                
                    <div class="contactBody d-flex justify-content-center">
                        <div class="switchFormContact d-flex justify-content-center">
                            
                            {{ form_start(form) }}
                                <div>{{form_row(form.nom)}}</div>
                                <div>{{form_row(form.prenom)}}</div>
                                <div>{{form_row(form.email)}}</div>
                                <div>{{form_row(form.sujet)}}</div>
                                <div>{{form_row(form.message)}}</div>
                                <p>* Champs obligatoires </p>

                            <div class="submit-button text-center" >
                            {{ form_end(form) }}

                            </div>

                        </div>
                     </div> 

                    <div class="d-flex justify-content-around">
                            <div class="me-2">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-phone"></i>
                                        <p class="mb-0">Téléphone</p>
                                    </div>
                                    <p class="mb-0">000000</p>
                                </div>
                            </div>

                            <div class="me-2">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="far fa-envelope me-1"></i>
                                        <p class="mb-0">E-mail</p>
                                    </div>
                                    <p class="mb-0">exemple@gmail.com</p>
                                </div>
                            </div>
                    </div> 
                
			</div>

                
            <div class=" maCarte d-flex justify-content-center" >
                
                    <img src="{{asset("images/carte.png")}}" alt="" class="custom-img">           
                
            </div>
            
    </div>
    


   
{% endblock %}








































